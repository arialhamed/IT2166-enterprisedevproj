@page
@model enterprisedevproj.Pages.Create.InterestModel
@{
    ViewData["Title"] = "Create Interest";
    @inject SignInManager<ApplicationUser> _signInManager
    @inject UserManager<ApplicationUser> _userManager
}
<h1>Create Interest</h1>
<form method="post" enctype="multipart/form-data">

    @*<div asp-validation-summary="All" class="text-danger"></div>
        <div><label class="text-danger">@Model.MyMessage</label></div>*@
    @*<div>
            <label class="col-sm-2 col-form-label">Creator ID (your ID):</label>
            <input asp-for="HereInterest.Id" disabled />
            <span asp-validation-for="HereInterest.Id" class="text-danger"></span>
        </div>*@
    <div>
        @*Name*@
        <label class="col-sm-2 col-form-label">Interest name:</label>
        <input asp-for="HereInterest.Name" />
        <span asp-validation-for="HereInterest.Name" class="text-danger"></span>
    </div>
    <div>
        @*Creator ID*@
        <label class="col-sm-2 col-form-label">Creator ID:</label>
        <input disabled placeholder="@_userManager.GetUserId(User)" />
    </div>
    <div>
        @*Description*@
        <label class="col-sm-2 col-form-label">Description:</label>
        <input asp-for="HereInterest.Description" />
        <span asp-validation-for="HereInterest.Description" class="text-danger"></span>
    </div>
    <div>
        @*Poster upload*@
        <label class="col-sm-2 col-form-label">Poster image:</label>
        <input type="file" name="files" />
        @*<span asp-validation-for="HereInterest.PosterURL" class="text-danger"></span>*@
    </div>

    <div>
        <input type="submit" id="create" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}