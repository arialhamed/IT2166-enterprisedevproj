@page
@model enterprisedevproj.Pages.Needs.UpdateConfirmModel
@{
    switch (Model.ConfirmIndex)
    {
        case "success":
            ViewData["Title"] = "Updated";
            break;
        default:
            ViewData["Title"] = "Update failed.";
            break;
    }
}
@section metatags {
    <meta http-equiv="refresh" content="5; URL=/">
}
@{
    switch (Model.ConfirmIndex)
    {
        case "success":
            <h1>Need successfully updated!</h1>
            <p>You will be redirected to the home page in 5 seconds.</p>
            break;
        default:
            break;

    }
}
